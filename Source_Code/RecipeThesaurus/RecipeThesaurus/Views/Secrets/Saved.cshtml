@{
    ViewData["Title"] = "Saved";
}


<div class="text-center">
    <h1>Secrets</h1>
    <p>
        @{
            <h1 class="display-4">Saved recipes @ViewData["Target"]</h1>
            foreach (var item in ViewData["RecipeList"] as List<Recipe>)
            {
                <div class="recipeBox">
                    <h3>@item.name</h3>
                    @item.description
                </div>
            }


        }

        @{
            foreach (var item in ViewData["RecipeList"] as List<Recipe>)
            {
                <div class="recipeBox">

                    <form asp-controller="Secrets" asp-action="SaveRecipe">
                        <button type="submit" name="save"> Save</button>
                        <input type="hidden" name="id" value="@item.id">
                    </form>

                    <div class="recipeBoxHeader">
                        <h1>@item.name</h1>
                        <p>@item.description</p>
                    </div>
                    <h2>Ingredients</h2>
                    <ul>
                        @{
                            foreach (var ingredient in item.ingredientsList as List<string>)
                            {
                                <li>@ingredient</li>
                            }
                        }
                    </ul>

                    <h2>Steps</h2>
                    <p>@item.instructions</p>

                </div>
            }
        }
    </p>
</div>