@{
    ViewData["Title"] = "Search";
}

<div class="text-center">
    <p>
    @{
        
        if ((ViewData["List"]as List<Recipe>).Count >= 1)
        {
            <h1 class="display-4">Results for @ViewData["Target"]</h1>
            foreach (var item in ViewData["RecipeList"] as List<Recipe>)
            {
                <div class="recipeBox">

                    <form asp-controller="Secrets" asp-action="SaveRecipe">
                        <button type="submit" name="save"> Save</button>
                        <input type="hidden" name="id" value="@item.id">
                    </form>

                    <div class="recipeBoxHeader">
                        <h1>@item.name</h1>
                        <p>@item.description</p>
                    </div>
                    <h2>Ingredients</h2>
                    <ul>
                        @{
                            foreach (var ingredient in item.ingredientsList as List<string>)
                            {
                                <li>@ingredient</li>
                            }
                        }
                    </ul>

                    <h2>Steps</h2>
                    <p>@item.instructions</p>

                </div>
            }
        }
        else
        {
            <h1 class="display-4">No results for @ViewData["Target"]</h1>
        }

    }
    </p>
</div>
