@{
    ViewData["Title"] = "Search";
}

<div class="text-center">
    <p>
    @{
        
        if ((ViewData["List"]as List<Recipe>).Count >= 1)
        {
            <h1 class="display-4">Results for @ViewData["Target"]</h1>
            foreach (var item in ViewData["List"] as List<Recipe>)
            {
                <div class="recipeBox">
                    <h3>@item.name</h3>
                    @item.description
                    </div>
                }
            }
        else
        {
            <h1 class="display-4">No results for @ViewData["Target"]</h1>
        }

    }
    </p>
</div>
